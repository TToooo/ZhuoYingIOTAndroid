<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/llayout_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/font_head_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:text="@string/message_notification_back_font"
            android:textColor="@color/main_theme_color"
            android:textSize="28sp"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:src="@mipmap/img_back" />

        <TextView
            android:id="@+id/txt_back_behind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_theme_color"
            android:layout_marginLeft="6dp"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_head_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/main_theme_color"
        android:textSize="18sp" />


</RelativeLayout>

