<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--标题-->
    <include layout="@layout/layout_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp">

        <EditText
            android:id="@+id/edt_forget_pwd_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_register_edt"
            android:hint="请先输入您的手机号"
            android:textColor="@color/three_txt_color"
            android:textColorHint="@color/nine_txt_color"
            android:textSize="16sp"
            android:inputType="number"
            android:maxLength="11"/>

        <TextView
            android:id="@+id/tv_forget_pwd_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_register_edt"
            android:gravity="center_vertical"
            android:text="当前账号手机号：15839918780"
            android:textColor="@color/three_txt_color"
            android:textSize="16sp"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/edt_forget_pwd_message_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_register_edt"
                android:hint="短信验证码"
                android:textColor="@color/three_txt_color"
                android:textColorHint="@color/nine_txt_color"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_forget_pwd_send_code"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_gray_small_corner"
                android:text="发送短信"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_forget_pwd_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_raduil"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>