<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/fl_index"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll_fg_gerenzhongxin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <fragment
                        android:id="@+id/fg_gerenzhongxin"
                        android:name="com.ouzhongiot.ozapp.fragment.PersonalFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></fragment>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_fg_mymachine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <fragment
                        android:id="@+id/fg_mymachine"
                        android:name="com.ouzhongiot.ozapp.fragment.Mymachine"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></fragment>
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/light_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"

                android:background="#c0ffffff"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/ll_wodeshebei"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_wodeshebei"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:src="@mipmap/wodeshebeixuanzhong" />

                    <TextView
                        android:id="@+id/tv_wodeshebei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的设备"
                        android:textColor="@color/green"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_gerenzhongxin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_gerenzhongxin"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:src="@mipmap/gerenzhongxinweixuanzhong" />

                    <TextView
                        android:id="@+id/tv_gerenzhongxin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人中心"
                        android:textColor="@color/gray"
                        android:textSize="12dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
