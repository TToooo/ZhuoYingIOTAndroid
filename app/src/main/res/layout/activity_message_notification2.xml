<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">
    <!--标题-->
    <include layout="@layout/layout_head2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:background="@drawable/shape_white_small_corner"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">
        <!--系统消息-->
        <LinearLayout
            android:id="@+id/llayout_message_system"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/message_system" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/txt_message_system"
                android:textColor="@color/main_black_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/font_message_system_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="@string/font_message_dot"
                android:textColor="@color/red_color"
                android:textSize="18sp"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="14dp"
                android:src="@mipmap/right_enter" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />
        <!--我的消息-->
        <LinearLayout
            android:id="@+id/llayout_message_mine"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/message_mine" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/txt_message_mine"
                android:textColor="@color/main_black_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/font_message_mine_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="@string/font_message_dot"
                android:textColor="@color/red_color"
                android:textSize="18sp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="14dp"
                android:src="@mipmap/right_enter" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>