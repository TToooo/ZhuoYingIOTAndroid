<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!--标题-->
    <include layout="@layout/layout_head2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp">

        <EditText
            android:id="@+id/edt_forget_newpwd"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/shape_register_edt"
            android:hint="@string/txt_new_pwd"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textColor="@color/three_txt_color"
            android:textColorHint="@color/content_black_color"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/edt_forget_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/shape_register_edt"
            android:hint="@string/txt_confirm_pwd"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textColor="@color/three_txt_color"
            android:textColorHint="@color/content_black_color"
            android:textSize="16sp" />


        <Button
            android:id="@+id/btn_forget_pwd_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@mipmap/btn_login"
            android:text="@string/txt_commit"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>